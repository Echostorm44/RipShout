<Window x:Class="RipShout.Views.About"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Style="{StaticResource UiWindow}" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RipShout"
        mc:Ignorable="d"
        Background="{ui:ThemeResource ApplicationBackgroundBrush}"
        
        WindowStartupLocation="CenterScreen"
        MinHeight="260" Width="350" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <ui:TitleBar Title="About" FontSize="16" Grid.Row="0" Icon="pack://application:,,,/Images/app.png"></ui:TitleBar>
        <Border Grid.Row="1" Padding="10">
            <TextBlock Text="This is free software, as in speech. I love internet radio, I got hooked on Digitally Imported radio over a decade ago but like regular radio I miss song titles and then it is too late. Ripshout acts to make it possible for me to go back at the end of the day and find the tracks I liked and buy them or just add the mp3 to my collection if there is no way to buy it. Also the backdrops in the player look awesome and remind of the good old days with Zune." TextWrapping="Wrap" FontSize="16"></TextBlock>
        </Border>
        <Border Grid.Row="2" Padding="10">
            <ui:Hyperlink NavigateUri="https://github.com/Echostorm44" Icon="Link48" Content="Slapped Together By Adam Marciniec" />
        </Border>
        <Border Grid.Row="3" Padding="10">
            <ui:Hyperlink NavigateUri="https://www.flaticon.com/free-icons/radio" Icon="Link48" Content="Image icons created by Freepik - Flaticon" />
        </Border>
        <Border Grid.Row="4" Padding="10">
            <ui:Hyperlink NavigateUri="https://github.com/lepoco/wpfui" Icon="Link48" Content="WPF UI Lib by Lepo" />
        </Border>
    </Grid>
</Window>
