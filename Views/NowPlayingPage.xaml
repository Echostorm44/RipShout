<ui:UiPage x:Class="RipShout.Views.NowPlayingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RipShout.Views"
      mc:Ignorable="d" 
      Style="{StaticResource UiPage}"
      xmlns:cc="clr-namespace:RipShout.CustomControls"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NowPlayingPage">
    <Grid>
        <Grid.Background>
            <ImageBrush Opacity="0.6" ImageSource="{Binding CurrentBackdropImagePath}" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="44"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="90"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source="{Binding CurrentAlbumImagePath}" Grid.Row="1" Height="250" Width="250"                
               HorizontalAlignment="Left" Grid.Column="1">            
        </Image>
        <cc:OutlinedTextBlock Text="{Binding CurrentSongName}" FontSize="29" Grid.Row="2" Grid.Column="1"
                              Fill="GhostWhite" Stroke="Black" StrokeThickness="3"></cc:OutlinedTextBlock>
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
            <cc:OutlinedTextBlock Text="{Binding CurrentBytesRead}" FontSize="20" Margin="0,0,10,0"
                                  Fill="GhostWhite" Stroke="Black" StrokeThickness="2"></cc:OutlinedTextBlock>
            <cc:OutlinedTextBlock Text="{Binding CurrentBitrate}" FontSize="20"
                                  Fill="GhostWhite" Stroke="Black" StrokeThickness="2"></cc:OutlinedTextBlock>            
        </StackPanel>
        <Slider Maximum="1" TickFrequency="0.01" TickPlacement="None" Value="{Binding Playa.Volume}" Grid.Row="4" Grid.Column="1" />
    </Grid>    
</ui:UiPage>
